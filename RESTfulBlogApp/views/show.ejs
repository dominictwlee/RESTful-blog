<% include ./partials/header %>

<div class="ui text container raised segment">
  <h1 class="ui huge header"><%= blog.title %></h1>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded medium image" src="<%= blog.image %>">
      <div class="content">
        <span><%= blog.created.toDateString() %></span>
        <div class="description">
          <p><%- blog.body %></p>
        </div>
        <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <a class="ui grey basic button" href="/blogs/">Go Back</a>
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>
