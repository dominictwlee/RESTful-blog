<% include ./partials/header %>

<div class="ui text container segment">
  <div class="ui huge header">Edit Blog</div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="field">
        <label>Text</label>
        <textarea row="9" name="blog[body]"><%= blog.body %></textarea>
      </div>
      <button class="ui primary button" type="submit">Submit</button>
  </form>
  <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
    <button class="negative ui button" type="submit">Delete</button>
  </form>
  <a class="ui button" href="/blogs/">Cancel</a>
</div>

<% include ./partials/footer %>
